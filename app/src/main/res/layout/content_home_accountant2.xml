<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_approved_leeds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="50"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Approved Leeds"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/aproved_leedcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Approved Leeds"
                        android:textColor="@color/mainTextColor"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/graycolor" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_expences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="50"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:src="@drawable/circle_shape_outline" />

                        <!--                        <View-->
                        <!--                            android:layout_width="1dp"-->
                        <!--                            android:layout_height="fill_parent"-->
                        <!--                            android:background="@color/graycolor" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_weight="30"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Expences"
                                android:textColor="@color/mainTextColor"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/expences_count"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Generate Expences"
                                android:textColor="@color/mainTextColor"
                                android:textSize="12dp" />

                            <!--                            <View-->
                            <!--                                android:layout_width="match_parent"-->
                            <!--                                android:layout_height="2dp"-->
                            <!--                                android:layout_marginLeft="4dp"-->
                            <!--                                android:layout_marginRight="4dp"-->
                            <!--                                android:background="@color/graycolor" />-->

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_invoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="50"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Invoices"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100">

                    <TextView
                        android:id="@+id/invoices_leed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paid Invoices"
                        android:textColor="@color/mainTextColor"
                        android:layout_weight="10"
                        android:textSize="12dp" />

                        <TextView
                            android:id="@+id/invoices_leed1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:gravity="right"
                            android:layout_weight="90"
                            android:textColor="@color/mainTextColor"
                            android:textSize="12dp" />

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/graycolor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/unpidinvoices_leed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Paid Invoices"
                        android:textColor="@color/mainTextColor"
                        android:layout_weight="10"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/unpidinvoices_leedcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/mainTextColor"
                        android:layout_weight="90"
                        android:gravity="right"
                        android:textSize="12dp" />

                </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_bills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_weight="50"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                card_view:cardCornerRadius="3dp"
                card_view:cardElevation="3dp"
                card_view:cardMaxElevation="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bills"
                        android:textColor="@color/mainTextColor"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/bills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generate Bills"
                        android:textColor="@color/mainTextColor"
                        android:layout_weight="10"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/bills_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/mainTextColor"
                        android:layout_weight="90"
                        android:gravity="right"
                        android:textSize="12dp" />

                </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="4dp"
                        android:background="@color/graycolor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:id="@+id/unpaid_bills"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generate Bills"
                        android:textColor="@color/mainTextColor"
                        android:layout_weight="10"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/paid_bills_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/mainTextColor"
                        android:layout_weight="90"
                        android:gravity="right"
                        android:textSize="12dp" />

                </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>