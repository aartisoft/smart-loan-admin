<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/view_dropshadow"
    >
    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
         >

        <TextView
            android:id="@+id/texthint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:gravity="center_horizontal"
            android:text="Select from Date and to Date"
            android:textColor="@color/darkgraycolor"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/layoutmainproduct1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/texthint2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="5sp"
            android:weightSum="100" >

            <EditText
                android:id="@+id/edittextfromdate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center_horizontal"
                android:hint="From Date"
                android:maxLength="20"
                android:padding="10sp"
                android:layout_margin="10dp"
                android:layout_weight="50"
                android:textColor="@color/whitetextcolor"
                android:textColorHint="@color/edittexthintcolor"
                android:background="@drawable/edittextanimation"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/edittexttodate"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:gravity="center_horizontal"
                android:hint="To Date"
                android:layout_weight="50"
                android:layout_margin="10dp"
                android:padding="10sp"
                android:textColor="@color/whitetextcolor"
                android:textColorHint="@color/edittexthintcolor"
                android:background="@drawable/edittextanimation"
                android:textSize="15sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutbuttons1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutmainproduct1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5sp"
            android:gravity="center_horizontal"
            android:padding="0sp"
            android:weightSum="100" >


        <TextView
            android:id="@+id/textviewtotalleads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="left"
            android:text="Leads:12"
            android:maxLength="20"
            android:padding="10sp"
            android:layout_margin="10dp"
            android:layout_weight="33"
            android:textColor="@color/whitetextcolor"
            android:textSize="20sp"/>


        <Button
                android:id="@+id/buttonview1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/view_dropshadow2"
                android:gravity="center_horizontal"
               android:padding="10dp"
                android:layout_weight="33"
                android:text="View"
                android:textColor="@color/darkgraycolor"
                android:textSize="20sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/textviewtotalammount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="right"
                android:padding="10sp"
                android:layout_weight="33"
                android:layout_margin="10dp"
                android:text="Rs 40000"
                android:textColor="@color/whitetextcolor"
                android:textSize="20sp"/>

        </LinearLayout>

        <ListView
            android:id="@+id/listreport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_below="@+id/layoutbuttons1"
            android:padding="5dp"
            android:layout_marginBottom="40sp"
            android:divider="@null"
            android:dividerHeight="0dp"
            >
        </ListView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/btnRequest"
        android:gravity="center_horizontal"
        android:padding="1sp"
        android:weightSum="100">

        <TextView
            android:id="@+id/Textsort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Sort By Bank"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="50"
            android:textColor="@color/whiteheadercolor"
            android:textSize="20sp"/>
    </LinearLayout>

</FrameLayout>
