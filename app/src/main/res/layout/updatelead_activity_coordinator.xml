<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/layouttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/hederbackground"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textheader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
           android:padding="10dp"
            android:text="Lead Id: 2345"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="normal|bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_below="@+id/layouttop"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="100">

        <ScrollView
            android:id="@+id/scrollviewrightleft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical">

            <RelativeLayout
                android:id="@+id/scrolllayout"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <LinearLayout
                    android:id="@+id/mainlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="80"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:weightSum="100">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="60"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/txtdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Date:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtcname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="C Name:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/txtcaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="C Address:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtcpaddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Prop Address:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtcontatct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Contact:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtbirthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Birth Date:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtpan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Pan No:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtadhar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Adhar No:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtbank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Bank:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/txtloantype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Loan Type:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtjob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Ocuupation:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtincome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Income(monthly):"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtloanammount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Ex Amount:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtagentid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Genrated By:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txtsalesid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="Sales Id:"
                            android:textColor="@color/darkgraycolor"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="40"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtdate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text="25 sep 2018"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtcname1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text="P Patel"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/txtcaddress1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text="Andheri east mumbai,40001"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtcpaddress1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text="malad west,mumbai,101231"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtcontatct1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text="+91 9089879878"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/txtbirthdate1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="22 April 1987"
                            android:background="@drawable/edittextanimation"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtpan1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text="CPM488393"
                            android:background="@drawable/edittextanimation"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtadhar1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@drawable/edittextanimation"
                            android:text="9876 6477 7488 2222"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtbank1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:background="@drawable/edittextanimation"
                            android:text=""
                            android:hint="Enter Bank Name"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <Spinner
                            android:id="@+id/sploantype1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/edittextanimation"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:text=""
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <Spinner
                            android:id="@+id/spoccupation1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text=""
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtincome1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text="45000"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtloanammount1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text="600000"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />


                        <EditText
                            android:id="@+id/txtagentid1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:text="AG 56477"
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/txtsalesid1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/edittextanimation"
                            android:padding="10dp"
                            android:hint="Sales agent id"
                            android:text=""
                            android:textColor="@color/mainTextColor"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/layoutattachdocuments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mainlayout2"
                    android:layout_marginTop="10dp"
                    android:layout_weight="10"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/txtattachdoc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/layoutlogin"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:padding="5sp"
                        android:text="Attach doc"
                        android:textColor="@color/darkgraycolor"
                        android:textSize="15dp" />


                    <Button
                        android:id="@+id/buttonattachdocuments"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/txtattachdoc"
                        android:background="@drawable/reportsimage"
                        android:gravity="center"
                        android:padding="5sp"
                        android:textColor="@color/darkgraycolor"
                        android:textSize="12sp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/layoutbuttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layoutattachdocuments"
                    android:layout_marginTop="20dp"
                    android:layout_weight="15"
                    android:gravity="bottom"
                    android:weightSum="100">

                    <Button
                        android:id="@+id/buttonupdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:background="@color/btnRequest"
                        android:text="Send to Sales"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:textStyle="normal|bold" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>